<view class="page">

  <!--login.wxml-->
  <view class="mainBox">

    <!--banner图-->
    <view class="section section_gap">
      <view class="section__ctn">
        <image class="image" src="../../img/login.png" />
      </view>
    </view>
    <view class="centerBox">
  <form bindsubmit="formSubmit">
      <!--输入框开始-->
      <view class="section getNumBox">
        <view>
          <image src="../../img/icon1.png" class="icon" />
        </view>
        <input placeholder="手机号" name="mobile" class="login_input"               maxlength="11" />
      </view>
      <view class="section getNumBox">
        <view>
          <image src="../../img/icon1.png" class="icon" />
        </view>
        <input placeholder="电话号码" name="phone" class="login_input" />
      </view>
      <view class="section getNumBox">
        <view>
          <image src="../../img/icon1.png" class="icon" />
        </view>
        <input placeholder="邮箱" class="login_input" />
      </view>
      <view class="section getNumBox">
        <view>
          <image src="../../img/icon1.png" class="icon" />
        </view>
        <input placeholder="银行卡号" bindinput="getCard" class="login_input"  />
      </view>
      <view class="section getNumBox">
        <view>
          <image src="../../img/icon1.png" class="icon" />
        </view>
        <input placeholder="中文" class="login_input" />
      </view>
      <view class="section getNumBox">
        <view>
          <image src="../../img/icon2.png" class="icon" />
        </view>
        <input placeholder="请输入手机验证码" class="login_input" maxlength="4" />
        <view class="getNum">获取验证码</view>
      </view>
<button formType="submit" type="primary">提交</button>
      <!--输入框结束-->

      <!--按钮开始-->
      <view class="button-wrapper">
        <button type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="bindViewTap"> 登录
        </button>
      </view>
      </form>
    </view>
  </view>
</view>